doctype html
block vars
	- manifest = manifest || {}
	- var title = manifest.name
	- var description = ''
	- assetPath = assetPath ? assetPath.replace(/\/+$/, '') : ''

html(lang=manifest.lang)
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width,initial-scale=1')

		title=title

		link(rel='manifest', href='../data/manifest.json')
		meta(name='theme-color', content=manifest.theme_color)

		meta(name='description', content=description)

		link(rel='icon', type='image/png', href='../images/icons/36x36.png', sizes='36x36')

		link(rel='stylesheet', href='../styles/index.sass', media='screen')
		link(rel='stylesheet', href='../styles/print.sass', media='print')

		// Queue of JS components to initialize
		script.
			initComponents = [
				{ name: 'shapes', data: { url: '#{assetPath}/sprites/shapes.svg' } }
			]

		//- Application init
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js', defer)
		//script(src='../scripts/index.js', defer)
		script(src='/bundle.js', defer)

	body

		block header
		block content
		block footer
